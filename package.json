{
    "name": "layout-manager",
    "displayName": "Layout Manager",
    "description": "Gestisci layout personalizzati per il tuo workflow",
    "version": "0.0.1",
    "engines": {
      "vscode": "^1.80.0"
    },
    "categories": [
      "Other"
    ],
    "activationEvents": [
      "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
      "commands": [
        {
          "command": "layoutManager.selectLayout",
          "title": "Seleziona Layout"
        },
        {
          "command": "layoutManager.createLayout",
          "title": "Crea Nuovo Layout"
        },
        {
          "command": "layoutManager.manageLayouts",
          "title": "Gestisci Layout"
        },
        {
          "command": "layoutManager.editLayout",
          "title": "Modifica Layout"
        }
      ],
      "configuration": {
        "title": "Layout Manager",
        "properties": {
          "layoutManager.layouts": {
            "type": "array",
            "description": "Configurazione dei layout personalizzati",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Nome del layout"
                },
                "primarySidebar": {
                  "type": "object",
                  "description": "Configurazione della primary sidebar",
                  "properties": {
                    "view": {
                      "type": "string",
                      "enum": ["explorer", "search", "scm", "extensions", "debug"],
                      "description": "View da visualizzare (default: explorer)"
                    },
                    "position": {
                      "type": "string",
                      "enum": ["left", "right"],
                      "description": "Posizione della sidebar"
                    }
                  }
                },
                "auxiliarySidebar": {
                  "type": "object",
                  "description": "Configurazione della auxiliary sidebar",
                  "properties": {
                    "mode": {
                      "type": "string",
                      "enum": ["agent", "ask", "plan"],
                      "description": "Modalit√† AI (default: agent)"
                    },
                    "position": {
                      "type": "string",
                      "enum": ["left", "right"],
                      "description": "Posizione della sidebar"
                    }
                  }
                },
                "panel": {
                  "type": "object",
                  "description": "Configurazione del panel",
                  "properties": {
                    "view": {
                      "type": "string",
                      "enum": ["terminal", "problems", "output", "debug-console"],
                      "description": "View da visualizzare (default: terminal)"
                    },
                    "maximized": {
                      "type": "boolean",
                      "description": "Panel massimizzato"
                    }
                  }
                }
              },
              "required": ["name"]
            }
          }
        }
      },
      "keybindings": [
        {
          "command": "layoutManager.selectLayout",
          "key": "ctrl+alt+l",
          "mac": "cmd+alt+l"
        },
        {
          "command": "layoutManager.agent",
          "key": "ctrl+alt+1",
          "mac": "cmd+alt+1"
        },
        {
          "command": "layoutManager.editor",
          "key": "ctrl+alt+2",
          "mac": "cmd+alt+2"
        },
        {
          "command": "layoutManager.search",
          "key": "ctrl+alt+3",
          "mac": "cmd+alt+3"
        },
        {
          "command": "layoutManager.git",
          "key": "ctrl+alt+4",
          "mac": "cmd+alt+4"
        }
      ]
    },
    "scripts": {
      "vscode:prepublish": "npm run compile",
      "compile": "tsc -p ./",
      "watch": "tsc -watch -p ./",
      "pretest": "npm run compile && npm run lint",
      "lint": "eslint src --ext ts"
    },
    "devDependencies": {
      "@types/vscode": "^1.106.1",
      "@types/node": "20.x",
      "@typescript-eslint/eslint-plugin": "^6.4.1",
      "@typescript-eslint/parser": "^6.4.1",
      "eslint": "^8.47.0",
      "typescript": "^5.1.6"
    }
  }